<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.abdalimran.loginsignup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.github.abdalimran.loginsignup.Activities.MainActivity" />

        <activity
            android:name="com.github.abdalimran.loginsignup.Activities.LoginActivity"
            android:theme="@style/LoginTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.github.abdalimran.loginsignup.Activities.SignupActivity"
            android:label="Create Account"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>